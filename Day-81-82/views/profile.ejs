<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile-Page</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
</head>


  <body class="bg-[#0a0a0a]">
    <div class="min-h-screen w-full py-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8">
          <div
            class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6"
          >
            <div>
              <h1 class="text-4xl sm:text-5xl font-bold mb-2 text-white">
                Hello, <%=user.name%> ðŸ‘‹
              </h1>
              <div class="flex items-center gap-2 text-gray-400">
                <i class="fas fa-at text-sm"></i>
                <span class="text-sm font-medium">@<%= user.username %></span>
              </div>
            </div>
            <div class="flex gap-3">
              <a
                href="/feed"
                class="px-5 py-2.5 bg-white/5 hover:bg-white/10 backdrop-blur-sm border border-white/10 rounded-xl text-white font-medium transition-all duration-300 flex items-center gap-2 text-sm hover:scale-105"
              >
                <i class="fas fa-stream"></i>
                <span>Feed</span>
              </a>
              <a
                class="px-5 py-2.5 bg-white/5 hover:bg-white/10 backdrop-blur-sm border border-white/10 rounded-xl text-white font-medium transition-all duration-300 flex items-center gap-2 text-sm hover:scale-105"
                href="/logout"
              >
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Create Post Section -->
        <div
          class="mb-8 bg-gradient-to-br from-[#1a1a1a] to-[#151515] rounded-2xl p-6 border border-white/5 shadow-2xl"
        >
          <div class="flex items-center gap-3 mb-5">
            <div
              class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center"
            >
              <i class="fas fa-pen text-gray-400"></i>
            </div>
            <h3 class="text-lg font-semibold text-white">Create New Post</h3>
          </div>
          <form action="/post" method="post" class="space-y-4">
            <textarea
              placeholder="What's on your mind? Share your thoughts..."
              name="content"
              rows="4"
              class="w-full p-4 outline-none resize-none bg-[#0a0a0a]/50 backdrop-blur-sm border border-white/10 rounded-xl focus:border-white/20 focus:ring-2 focus:ring-white/10 transition-all duration-300 placeholder:text-gray-500 text-white text-sm"
              required
            ></textarea>
            <button
              type="submit"
              class="w-full py-3.5 bg-white text-[#0a0a0a] hover:bg-gray-100 font-semibold rounded-xl transition-all duration-300 flex items-center justify-center gap-2 text-sm shadow-lg hover:shadow-xl hover:scale-[1.02] active:scale-[0.98]"
            >
              <i class="fas fa-paper-plane"></i>
              <span>Create Post</span>
            </button>
          </form>
        </div>

        <!-- Posts Section -->
        <div class="posts">
          <div class="flex items-center gap-3 mb-6">
            <div
              class="h-px flex-1 bg-gradient-to-r from-transparent via-white/10 to-transparent"
            ></div>
            <h2 class="text-2xl font-bold text-white flex items-center gap-2">
              <i class="fas fa-layer-group text-gray-400"></i>
              <span>Your Posts</span>
            </h2>
            <div
              class="h-px flex-1 bg-gradient-to-r from-transparent via-white/10 to-transparent"
            ></div>
          </div>

          <div
            class="postcontainer w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5"
          >
            <%if(!user.posts.length > 0){%>
            <div
              class="col-span-full text-center py-16 bg-gradient-to-br from-[#1a1a1a] to-[#151515] rounded-2xl border border-white/5"
            >
              <div
                class="w-20 h-20 mx-auto mb-4 rounded-full bg-white/5 flex items-center justify-center"
              >
                <i class="fas fa-inbox text-3xl text-gray-500"></i>
              </div>
              <h3 class="text-xl font-semibold text-gray-300 mb-2">
                No Posts Yet
              </h3>
              <p class="text-gray-500 text-sm">
                Start sharing your thoughts with the world!
              </p>
            </div>
            <% }else{ %> <%user.posts.reverse().forEach((post)=>{ %>
            <div
              class="group post flex flex-col justify-between bg-gradient-to-br from-[#1a1a1a] to-[#151515] border border-white/5 rounded-2xl p-6 hover:border-white/10 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <!-- Post Header -->
              <div class="flex items-start gap-4 mb-4">
                <div
                  class="w-12 h-12 rounded-xl bg-gradient-to-br from-white/10 to-white/5 flex items-center justify-center text-white font-bold text-lg shadow-lg flex-shrink-0"
                >
                  <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-white font-semibold text-sm mb-1 truncate">
                    @<%= user.username %>
                  </h4>
                  <div class="flex items-center gap-2 text-gray-500 text-xs">
                    <i class="far fa-clock"></i>
                    <span>Just now</span>
                  </div>
                </div>
              </div>

              <!-- Post Content -->
              <p
                class="text-gray-300 mb-5 leading-relaxed min-h-[80px] break-words text-sm line-clamp-4"
              >
                <%= post.content%>
              </p>

              <!-- Post Actions -->
              <div
                class="flex items-center justify-between pt-4 border-t border-white/5"
              >
                <div class="flex items-center gap-2 text-gray-400 text-xs">
                  <i class="fas fa-heart text-red-400"></i>
                  <span class="font-semibold text-white"
                    ><%= post.likes.length%></span
                  >
                  <span class="text-gray-500">likes</span>
                </div>

                <div class="flex gap-2">
                  <a
                    class="px-3.5 py-2 rounded-lg font-medium transition-all duration-300 flex items-center gap-1.5 text-xs bg-white/5 hover:bg-white/10 border border-white/10 text-gray-300 hover:text-white hover:scale-105 <%= (post.likes.indexOf(user._id) === -1 ? '' : 'bg-red-500/10 border-red-500/20 text-red-400') %>"
                    href="/like/<%= post._id%>"
                  >
                    <i
                      class="fas <%= (post.likes.indexOf(user._id) === -1 ? 'fa-heart' : 'fa-heart-broken') %>"
                    ></i>
                    <span
                      ><%= (post.likes.indexOf(user._id) === -1 ? "Like" :
                      "Unlike" ) %></span
                    >
                  </a>
                  <a
                    class="px-3.5 py-2 bg-white/5 hover:bg-white/10 border border-white/10 text-gray-300 hover:text-white rounded-lg font-medium transition-all duration-300 flex items-center gap-1.5 text-xs hover:scale-105"
                    href="/edit/<%=post._id%>"
                  >
                    <i class="fas fa-edit"></i>
                    <span>Edit</span>
                  </a>
                </div>
              </div>
            </div>
            <%})}%>
          </div>
        </div>
      </div>
    </div>

    <style>
      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #0a0a0a;
      }
      ::-webkit-scrollbar-thumb {
        background: #2a2a2a;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #3a3a3a;
      }

      .line-clamp-4 {
        display: -webkit-box;
        line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </body>
</html>
